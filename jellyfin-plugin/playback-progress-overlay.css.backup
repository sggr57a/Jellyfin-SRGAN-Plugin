/**
 * Jellyfin Upscaling Progress Overlay Styles
 *
 * Automatically adapts to Jellyfin's current theme
 * Uses Jellyfin CSS variables for seamless integration
 */

/* Container */
.upscaling-progress-container {
    position: fixed;
    top: 20px;
    right: 20px;
    z-index: 10000;
    font-family: var(--font-family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif);
    transition: opacity 0.3s ease, transform 0.3s ease;
}

.upscaling-progress-container.hidden {
    opacity: 0;
    transform: translateX(400px);
    pointer-events: none;
}

/* Content */
.upscaling-progress-content {
    background: var(--card-background, rgba(30, 30, 30, 0.98));
    border: 1px solid var(--theme-border-color, rgba(255, 255, 255, 0.1));
    border-radius: var(--rounding, 12px);
    padding: 20px;
    min-width: 320px;
    max-width: 400px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    animation: slideIn 0.3s ease;
    color: var(--theme-text-color, #fff);
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateX(400px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

/* Status colors */
.upscaling-progress-content.status-processing {
    border-left: 4px solid var(--theme-primary-color, var(--accent-color, #00a4dc));
}

.upscaling-progress-content.status-finalizing {
    border-left: 4px solid var(--theme-warning-color, #ffa500);
}

.upscaling-progress-content.status-complete {
    border-left: 4px solid var(--theme-success-color, #4caf50);
}

/* Header */
.upscaling-header {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
    gap: 10px;
}

.upscaling-icon {
    font-size: 24px;
    line-height: 1;
}

.upscaling-title {
    flex: 1;
    font-size: 18px;
    font-weight: 600;
    color: var(--theme-text-color, #fff);
}

.upscaling-close {
    background: transparent;
    border: none;
    color: var(--theme-text-color-60, rgba(255, 255, 255, 0.6));
    font-size: 28px;
    line-height: 1;
    cursor: pointer;
    padding: 0;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s;
}

.upscaling-close:hover {
    color: var(--theme-text-color, #fff);
}

/* Status */
.upscaling-status {
    margin-bottom: 15px;
}

.status-text {
    color: var(--theme-text-color-90, rgba(255, 255, 255, 0.9));
    font-size: 14px;
    line-height: 1.4;
}

/* Progress Bar */
.upscaling-progress-bar-container {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 15px;
}

.upscaling-progress-bar {
    flex: 1;
    height: 8px;
    background: var(--theme-progress-background, rgba(255, 255, 255, 0.1));
    border-radius: 4px;
    overflow: hidden;
    position: relative;
}

.upscaling-progress-fill {
    height: 100%;
    background: linear-gradient(90deg,
        var(--theme-primary-color, var(--accent-color, #00a4dc)) 0%,
        var(--theme-secondary-color, #0080ff) 100%
    );
    border-radius: 4px;
    transition: width 0.5s ease;
    position: relative;
    overflow: hidden;
}

.upscaling-progress-fill::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
        90deg,
        transparent 0%,
        rgba(255, 255, 255, 0.3) 50%,
        transparent 100%
    );
    animation: shimmer 2s infinite;
}

@keyframes shimmer {
    0% {
        transform: translateX(-100%);
    }
    100% {
        transform: translateX(100%);
    }
}

/* Complete state */
.status-complete .upscaling-progress-fill {
    background: linear-gradient(90deg,
        var(--theme-success-color, #4caf50) 0%,
        var(--theme-success-light, #66bb6a) 100%
    );
}

/* Finalizing state */
.status-finalizing .upscaling-progress-fill {
    background: linear-gradient(90deg,
        var(--theme-warning-color, #ffa500) 0%,
        var(--theme-warning-dark, #ff8c00) 100%
    );
}

.upscaling-progress-text {
    font-size: 14px;
    font-weight: 600;
    color: var(--theme-text-color, #fff);
    min-width: 45px;
    text-align: right;
}

/* Details */
.upscaling-details {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-bottom: 15px;
    padding: 12px;
    background: var(--theme-background-secondary, rgba(255, 255, 255, 0.05));
    border-radius: var(--rounding-small, 8px);
}

.upscaling-detail-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.detail-label {
    font-size: 13px;
    color: var(--theme-text-color-secondary, rgba(255, 255, 255, 0.6));
}

.detail-value {
    font-size: 13px;
    font-weight: 600;
    color: var(--theme-text-color, #fff);
}

.detail-value.speed-good {
    color: var(--theme-success-color, #4caf50);
}

.detail-value.speed-slow {
    color: var(--theme-warning-color, #ffa500);
}

/* Actions */
.upscaling-actions {
    display: flex;
    gap: 10px;
}

.upscaling-btn {
    flex: 1;
    padding: 10px 16px;
    border: none;
    border-radius: var(--rounding-small, 8px);
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
}

.upscaling-btn-switch {
    background: var(--accent-color, #00a4dc);
    background: linear-gradient(135deg, var(--accent-color, #00a4dc) 0%, var(--accent-color-dark, #0080ff) 100%);
    color: var(--button-text-color, #fff);
}

.upscaling-btn-switch:hover {
    background: var(--accent-color-hover, #0094cc);
    background: linear-gradient(135deg, var(--accent-color-hover, #0094cc) 0%, var(--accent-color-dark-hover, #0070ef) 100%);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px var(--accent-shadow, rgba(0, 164, 220, 0.4));
}

.upscaling-btn.hidden {
    display: none;
}

/* Mobile responsive */
@media (max-width: 768px) {
    .upscaling-progress-container {
        top: 10px;
        right: 10px;
        left: 10px;
    }

    .upscaling-progress-content {
        min-width: auto;
        max-width: none;
    }
}

/* Animations */
@keyframes pulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.7;
    }
}

.status-processing .upscaling-icon {
    animation: pulse 2s infinite;
}

/* Accessibility */
.upscaling-btn:focus,
.upscaling-close:focus {
    outline: 2px solid var(--accent-color, #00a4dc);
    outline-offset: 2px;
}

/* Theme support */
/* Dark theme - uses Jellyfin's theme variables */
@media (prefers-color-scheme: dark) {
    .upscaling-progress-content {
        background: var(--card-background-dark, rgba(20, 20, 20, 0.98));
    }
}

/* Light theme - adjust for Jellyfin light theme */
@media (prefers-color-scheme: light) {
    .upscaling-progress-content {
        background: var(--card-background-light, rgba(255, 255, 255, 0.98));
    }
    
    .upscaling-progress-bar {
        background: var(--progress-background-light, rgba(0, 0, 0, 0.1));
    }
    
    .upscaling-details {
        background: var(--detail-background-light, rgba(0, 0, 0, 0.05));
    }
}

/* High contrast mode */
@media (prefers-contrast: high) {
    .upscaling-progress-content {
        border: 2px solid var(--primary-text-color, #fff);
    }

    .upscaling-progress-bar {
        border: 1px solid var(--primary-text-color, #fff);
    }
}

/* Reduced motion */
@media (prefers-reduced-motion: reduce) {
    .upscaling-progress-container,
    .upscaling-progress-fill,
    .upscaling-btn,
    .upscaling-progress-content {
        transition: none;
        animation: none;
    }

    .upscaling-progress-fill::after {
        animation: none;
    }
}

/* Tooltips */
.detail-value[title] {
    cursor: help;
    text-decoration: underline dotted;
}

/* Loading state */
.upscaling-progress-content.loading-state {
    border-left: 4px solid var(--accent-color, #00a4dc);
}

.upscaling-progress-content.loading-state .upscaling-progress-bar {
    overflow: hidden;
    position: relative;
}

.upscaling-progress-content.loading-state .upscaling-progress-bar::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        90deg,
        transparent 0%,
        var(--accent-color-faded, rgba(0, 164, 220, 0.3)) 25%,
        var(--accent-color-medium, rgba(0, 164, 220, 0.6)) 50%,
        var(--accent-color-faded, rgba(0, 164, 220, 0.3)) 75%,
        transparent 100%
    );
    animation: loading-sweep 1.5s infinite;
}

@keyframes loading-sweep {
    0% {
        transform: translateX(-100%);
    }
    100% {
        transform: translateX(100%);
    }
}

.upscaling-progress-content.loading-state .status-text {
    animation: pulse 2s infinite;
}

.upscaling-progress-content.loading-state .upscaling-icon {
    animation: pulse 2s infinite;
}

/* Spinner animation for loading state */
.upscaling-progress-content.loading-state .upscaling-icon::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 20px;
    border: 3px solid var(--accent-color-faded, rgba(0, 164, 220, 0.2));
    border-top-color: var(--accent-color, #00a4dc);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% {
        transform: translate(-50%, -50%) rotate(0deg);
    }
    100% {
        transform: translate(-50%, -50%) rotate(360deg);
    }
}
